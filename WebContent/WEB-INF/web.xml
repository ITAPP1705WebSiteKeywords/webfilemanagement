<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>
	FileManager</display-name>
	<context-param>
		<param-name>filelocation</param-name>
		<param-value>uploadfiles</param-value>
	</context-param>
	<servlet>
		<description>
		注册新用户</description>
		<display-name>
		reguser</display-name>
		<servlet-name>reguser</servlet-name>
		<servlet-class>
		edu.cqu.filemanager.servlet.RegUser</servlet-class>
	</servlet>
	<servlet>
		<description>
		用户登录</description>
		<display-name>
		login</display-name>
		<servlet-name>login</servlet-name>
		<servlet-class>
		edu.cqu.filemanager.servlet.UserLogin</servlet-class>
	</servlet>
	<servlet>
		<description>
		显示一个用户的所有文件</description>
		<display-name>
		ShowFileListOfUser</display-name>
		<servlet-name>ShowFileListOfUser</servlet-name>
		<servlet-class>
		edu.cqu.filemanager.servlet.ShowFileListOfUser</servlet-class>
	</servlet>
	<servlet>
		<description>
		处理上传附件的Servlet</description>
		<display-name>
		uploadfile</display-name>
		<servlet-name>uploadfile</servlet-name>
		<servlet-class>
		edu.cqu.filemanager.servlet.UploadFile</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>
		logout</display-name>
		<servlet-name>logout</servlet-name>
		<servlet-class>
		edu.cqu.filemanager.servlet.UserLogout</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>
		showallfile</display-name>
		<servlet-name>showallfile</servlet-name>
		<servlet-class>
		edu.cqu.filemanager.servlet.ShowAllFileList</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>
		deletefile</display-name>
		<servlet-name>deletefile</servlet-name>
		<servlet-class>
		edu.cqu.filemanager.servlet.UserDeleteFile</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>
		downloadfile</display-name>
		<servlet-name>downloadfile</servlet-name>
		<servlet-class>
		edu.cqu.filemanager.servlet.UserDownloadFile</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>
		showalluser</display-name>
		<servlet-name>showalluser</servlet-name>
		<servlet-class>
		edu.cqu.filemanager.servlet.ShowAllUserList</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>
		deleteuser</display-name>
		<servlet-name>deleteuser</servlet-name>
		<servlet-class>
		edu.cqu.filemanager.servlet.AdminDeleteUser</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>reguser</servlet-name>
		<url-pattern>/reguser</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ShowFileListOfUser</servlet-name>
		<url-pattern>/showuserfile</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>uploadfile</servlet-name>
		<url-pattern>/uploadfile</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>showallfile</servlet-name>
		<url-pattern>/showallfile</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>deletefile</servlet-name>
		<url-pattern>/deletefile</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>downloadfile</servlet-name>
		<url-pattern>/downloadfile</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>showalluser</servlet-name>
		<url-pattern>/showalluser</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>deleteuser</servlet-name>
		<url-pattern>/deleteuser</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>
	<filter>
		<filter-name>Set Character Encoding</filter-name>
		<filter-class>edu.cqu.common.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>Set Character Encoding</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

</web-app>
